<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_purple"
    tools:context=".OverviewFragment">


    <TextView
        android:id="@+id/text3"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        android:text="Seu agendamento foi realizado com sucesso!!"
        android:fontFamily="@font/convergence"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="10dp"
        android:text="Dados do agendamento:"
        android:fontFamily="@font/convergence"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3" />

    <TextView
        android:id="@+id/date2"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:text=""
        android:fontFamily="@font/convergence"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviceType" />

    <TextView
        android:id="@+id/serviceType"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:text=""
        android:fontFamily="@font/convergence"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:text=""
        android:fontFamily="@font/convergence"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:layout_width="160dp"
        android:layout_height="77dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/roundedbutton"
        android:text="Ok"
        android:fontFamily="@font/convergence"
        android:textColor="@color/soft_purple"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address3" />

    <TextView
        android:id="@+id/address3"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:text=""
        android:fontFamily="@font/convergence"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time2" />
</androidx.constraintlayout.widget.ConstraintLayout>