<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_purple"
    tools:context=".SetDateFragment">


    <TextView
        android:id="@+id/text2"
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_marginTop="30dp"
        android:text="Selecione data, horário e endereço:"
        android:fontFamily="@font/convergence"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/date"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Data"
        android:fontFamily="@font/convergence"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="@color/soft_purple"
        android:textColorHint="@color/soft_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <EditText
        android:id="@+id/time"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Horário"
        android:fontFamily="@font/convergence"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/soft_purple"
        android:textColorHint="@color/soft_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <EditText
        android:id="@+id/obs"
        android:layout_width="299dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Observações adicionais"
        android:fontFamily="@font/convergence"
        android:inputType="textMultiLine"
        android:maxLength="250"
        android:textAlignment="center"
        android:textColor="@color/soft_purple"
        android:textColorHint="@color/soft_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setAppointment"
        android:layout_width="210dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundedbutton"
        android:text="Agendar"
        android:fontFamily="@font/convergence"
        android:textColor="@color/soft_purple"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obs" />

    <EditText
        android:id="@+id/address2"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Endereço"
        android:fontFamily="@font/convergence"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/soft_purple"
        android:textColorHint="@color/soft_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

</androidx.constraintlayout.widget.ConstraintLayout>